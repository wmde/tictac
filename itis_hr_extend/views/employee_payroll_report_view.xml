<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="itis_emp_payroll_report_tree" model='ir.ui.view'>
			<field name="name">itis.emp.payroll.report.tree</field>
			<field name="model">employee.payroll.report</field>
